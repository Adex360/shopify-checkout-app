generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Shop {
  id          String   @id @default(uuid())
  shop_name   String   @unique
  domain      String?
  accessToken String
  scope       String
  state       String
  shop_id     String
  name        String
  session_id  String
  currency    String?
  status      String   @default("active")
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
